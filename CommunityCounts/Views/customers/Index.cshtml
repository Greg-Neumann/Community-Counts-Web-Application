@model IEnumerable<CommunityCounts.Models.Master.customer>

@{
    ViewBag.Title = "Manage all Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage all Customers</h2>

<p>
    @Html.ActionLink("Create New", "Create",null,htmlAttributes: new { @class = "btn btn-warning btn-xs" })
</p>
<table class="table table-striped table-hover" >
    <tr>
               <th>
            @Html.DisplayNameFor(model => model.CustName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.idCust }, htmlAttributes: new { @class = "btn btn-primary  btn-xs" })
            @Html.ActionLink("Edit", "Edit", new { id = item.idCust }, htmlAttributes: new { @class="btn btn-warning btn-xs"})
            @Html.ActionLink("Delete", "Delete", new { id = item.idCust }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
