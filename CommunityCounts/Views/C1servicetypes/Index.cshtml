@model IEnumerable<CommunityCounts.Models.Master.C1servicetypes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Activities</h2>

<p>
   @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C1funders.FunderCode)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.AttendanceType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BiometricTracked)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C1funders.FunderCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.refdata.RefCodeDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BiometricTracked)
            </td>
            <td>
                @* @Html.ActionLink("Details", "Details", new { id = item.idServiceType }, htmlAttributes: new { @class = "btn btn-primary  btn-xs" })*@
                @Html.ActionLink("Edit", "Edit", new { id = item.idServiceType }, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
                @Html.ActionLink("Delete", "Delete", new { id = item.idServiceType }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
