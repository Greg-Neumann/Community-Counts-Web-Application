@model IEnumerable<CommunityCounts.Models.Master.C1surveys>

@{
    ViewBag.Title = "Survey Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Surveys (Management)</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SurveyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C1servicetypes.ServiceType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.forAllClients)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.forAnonymousClients)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numTxtQ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numScaQ)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurveyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C1servicetypes.ServiceType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.forAllClients)
            </td>
            <td width="60px">
                @Html.DisplayFor(modelItem => item.forAnonymousClients)
            </td>
            <td width="60px">
                @Html.DisplayFor(modelItem => item.numTxtQ)
            </td>
            <td width="60px">
                @Html.DisplayFor(modelItem => item.numScaQ)
            </td>
            
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.idSurvey }, htmlAttributes: new { @class = "btn btn-primary  btn-xs" })
                @Html.ActionLink("Edit", "Edit", new { id = item.idSurvey }, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
                @Html.ActionLink("Delete", "Delete", new { id = item.idSurvey }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
