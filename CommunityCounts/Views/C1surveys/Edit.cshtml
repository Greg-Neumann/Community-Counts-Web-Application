@model CommunityCounts.Models.Master.C1surveys

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Survey</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idSurvey)
        @Html.HiddenFor(model => model.createdDateTime)
        @Html.HiddenFor(model => model.createdUser)

        <div class="form-group">
            @Html.LabelFor(model => model.idServiceype, "Activity", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("idServiceype", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idServiceype, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SurveyName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.SurveyName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SurveyName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SurveyDesc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.SurveyDesc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SurveyDesc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.numTxtQ, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @if(@ViewBag.gotTxtResults==true)
                {@Html.DisplayFor(model => model.numTxtQ)}
                @if (@ViewBag.gotTxtResults == true)
                {@Html.HiddenFor(model => model.numTxtQ)}
                @if(@ViewBag.gotTxtResults==false)
                {@Html.EditorFor(model => model.numTxtQ, new { htmlAttributes = new { @class = "form-control" } })}
                @Html.ValidationMessageFor(model => model.numTxtQ, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.numScaQ, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @if(@ViewBag.gotNumResults==false)
                {@Html.EditorFor(model => model.numScaQ, new { htmlAttributes = new { @class = "form-control" } })}
                @if(@ViewBag.gotNumResults==true)
                {@Html.DisplayFor(model=>model.numScaQ)}
                @if (@ViewBag.gotNumResults == true)
                {@Html.HiddenFor(model => model.numScaQ)}
                @Html.ValidationMessageFor(model => model.numScaQ, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @if (@ViewBag.gotNumResults || @ViewBag.gotTxtResults)
            {<p class="alert-warning" }>Results already exist for this survey so you may be unable to change some values</p>}
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.forAllClients, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <div class="checkbox">
                    @Html.EditorFor(model => model.forAllClients)
                    @Html.ValidationMessageFor(model => model.forAllClients, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.forAnonymousClients, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <div class="checkbox">
                    @Html.EditorFor(model => model.forAnonymousClients)
                    @Html.ValidationMessageFor(model => model.forAnonymousClients, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.active, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <div class="checkbox">
                    @Html.EditorFor(model => model.active)
                    @Html.ValidationMessageFor(model => model.active, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
      

        <div class="form-group">
            <div class="col-md-offset-1 col-md-4">
                <input type="submit" value="Save" class="btn btn-warning btn-xs" />
            </div>
        </div>
    </div>
}