                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control",@value=Model.EndDate } })
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>

