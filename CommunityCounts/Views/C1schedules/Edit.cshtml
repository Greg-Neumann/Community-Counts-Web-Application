@model CommunityCounts.Models.Master.C1schedules

@{
    ViewBag.Title = "Edit Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Schedule</h2>

@using (Html.BeginForm())
{
