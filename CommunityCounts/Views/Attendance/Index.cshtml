@model IEnumerable<CommunityCounts.Models.Master.C1servicetypes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Attendance Activities</h2>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C1funders.FunderCode)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C1funders.FunderCode)
            </td>

            <td>
                @Html.ActionLink("Print", "PrintAttendance", new { id = item.idServiceType }, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Mark", "MarkAttendance", new { id = item.idServiceType }, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
            </td>
        </tr>
    }

</table>
