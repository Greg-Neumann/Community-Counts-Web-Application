@model List<CommunityCounts.Models.Master.BookingsList>

@{
    ViewBag.Title = "Mark";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mark Attendance for Activity</h2>
<h3>
    @ViewBag.ActivityName
</h3>
@Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
<table class="table table-striped table-hover">
    <tr>
        <th>
            Room
        </th>
        <th>
            Start Date
        </th>   
        <th>
            End Date
        </th>
        <th>
            Start Time
        </th>
        <th>
            End Time
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Resource )
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>  
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.ActionLink("Mark", "MarkAList", new { id = item.idBookings }, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
                @if(item.Marked)
                {
                    @Html.ActionLink("Unmark", "UnmarkAList", new { id = item.idBookings }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
                }
            </td>
        </tr>
    }

</table>
