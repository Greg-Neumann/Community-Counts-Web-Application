@{
    ViewBag.Title = "Home Page";
}
<div class="col-md-9">
    @if (@ViewBag.userHasNews)
    {
        <table class=" alert alert-dismissible alert-danger">
            <tr>
                <td>
                    <p style="font-size:x-large">You have news &nbsp;</p>
                </td>
                <td>
                    @Html.ActionLink("Dismiss", "Dismiss", null, htmlAttributes: new { @class = "btn btn-success btn-sm" })&nbsp;
                </td>
                <td>
                    @Html.ActionLink("Read More", "ReadMore", null, htmlAttributes: new { @class = "btn btn-info  btn-sm" }) &nbsp;
                </td>
            </tr>
        </table>
    }
    @if (@ViewBag.RegYear != null)
    {
        <p style="font-size:large" class="text-primary">
            You are logged-on to work with registration year <strong>@ViewBag.RegYear</strong> (ending @ViewBag.RegYearDate) @Html.ActionLink("Change", "ChgYear", null, htmlAttributes: new { @class = "btn btn-danger  btn-sm" })
        </p>
    }
    else
    {
        <p style="font-size:large"  class="text-primary">
            Record, monitor and <em> analyse </em> your community services using Community Counts
        </p>
    }
    <img src="~/Content/Community Counts graphics artwork 784px x 441px.jpg" class="img-rounded" style="width:95%" />
</div>
