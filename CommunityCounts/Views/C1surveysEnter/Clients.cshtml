@model IEnumerable<CommunityCounts.Models.Master.SurveyEnterList>
@{
    ViewBag.Title = "Survey Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>All Clients for a survey</h2>
<h3>Survey : @ViewBag.SurveyName</h3>
<h3>Activity : @ViewBag.Activity</h3>
<p>
    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numNQ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numTQ)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostCode)
            </td>
            <td width="60px">
                @Html.DisplayFor(modelitem => item.numNQ)
            </td>
            <td width="60px">
                @Html.DisplayFor(modelitem => item.numTQ)
            </td>
            <td>
                @if (item.numericReq)
                { 
                    @Html.ActionLink("Numeric ", "Results", new { id = item.idSurvey, clientid = item.idClient }, htmlAttributes: new { @class = "btn btn-warning  btn-xs" })                                                                                                                                                    
                }
                @if(item.textReq)
                { 
                    @Html.ActionLink("Text ", "Text", new { id = item.idSurvey, clientid = item.idClient }, htmlAttributes: new { @class = "btn btn-warning  btn-xs" })
                } 
                @if(item.gotResults)
                { 
                    @Html.ActionLink("Delete","Delete",new{id=item.idSurvey, clientid = item.idClient}, htmlAttributes: new { @class = "btn btn-danger  btn-xs" })
                }
            </td>
        </tr>
    }

</table>
