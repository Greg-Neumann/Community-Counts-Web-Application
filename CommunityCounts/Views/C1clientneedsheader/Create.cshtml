@model CommunityCounts.Models.Master.C1clientneedsheader

@{
    ViewBag.Title = "Create Client Need";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a new Client Need</h2>
<h3>Client Name: @ViewBag.FirstName @ViewBag.LastName</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @{string a = "Index/" + @ViewBag.idClient;}     @* compute URL that is returned to *@
        @Html.ActionLink("Back to List", a, null, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("idClient",(int)ViewBag.idClient)
       @*<input id="idClient" value="@ViewBag.idClient" type="hidden" /> *@ 

        <div class="form-group">
            @Html.LabelFor(model => model.ClientNeedsDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.ClientNeedsDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ClientNeedsDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClientNeedsNotes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ClientNeedsNotes, 4,100,new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ClientNeedsNotes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-4">
                <input type="submit" value="Enter Needs" class="btn btn-warning btn-xs" />
            </div>
        </div>
    </div>
}
