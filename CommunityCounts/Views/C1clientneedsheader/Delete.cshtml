@model IEnumerable<CommunityCounts.Models.Master.C1clientneedsdetail>

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Client Needs</h2>
<div class="alert alert-dismissable alert-danger">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <strong>Warning!</strong> Are you sure that you want to delete this Need for Client @ViewBag.FirstName  @ViewBag.LastName?
</div>
<div>
    <hr />
    @{string route = "Index/" + @ViewBag.idClient;}
    @Html.ActionLink("No - Back to List", @route, null, htmlAttributes: new { @class = "btn btn-primary btn-xs" })

    <h3>Client Name: @ViewBag.FirstName @ViewBag.LastName</h3>

    <h4>Date that these Needs Applied: @ViewBag.NeedsDate</h4>
    @if(@ViewBag.Needs!=null){<div class="panel panel-default"><div class="panel-body">@ViewBag.Needs</div></div>}

    <table class="table">
        <tr>
            <th>
                &nbsp;
            </th>
            <th width="50px">
                @Html.DisplayNameFor(model => model.hasThisNeed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.C1clientneedscat.Category)
            </th>

        </tr>
        @{int i = 1;}
        @foreach (var item in Model) {
            <tr>
                <td>
                    @i.ToString("D3")&nbsp;
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hasThisNeed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.C1clientneedscat.Category)
                </td>

            </tr>
    i++;
}
    </table>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-md-2">
        <input type="submit" value="Delete" class="btn btn-danger btn-xs" />
    </div>
    }
</div>
