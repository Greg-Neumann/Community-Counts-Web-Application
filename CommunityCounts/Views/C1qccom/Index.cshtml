@model IEnumerable<CommunityCounts.Models.Master.C1qccom>

@{
    ViewBag.Title = "List Quick Comments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List all Quick Comments for registration year @ViewBag.RegYear</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreateDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C1qccomtype.Category)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C1qccomtype.Category)
            </td>
           
          
            
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.idQuickContactsComment }, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Edit", "Edit", new { id = item.idQuickContactsComment }, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
                @Html.ActionLink("Delete", "Delete", new { id = item.idQuickContactsComment }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
