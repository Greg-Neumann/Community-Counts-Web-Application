@model IEnumerable<CommunityCounts.Models.Master.C1client>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Clients (@ViewBag.ClientCount in year @ViewBag.RegYear)</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
</p>
@using (Html.BeginForm())
{
    <p>
        Find by Name or Client ID : @Html.TextBox("SearchStringName")
        <input type="submit" value="Search" />
    </p>
}
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idClient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th width="40px">
            @Html.DisplayNameFor(model => model.HouseNumber)
        </th>
        <th width="100px">
            @Html.DisplayNameFor(model => model.AddressLine1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.citylist.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.countylist.County)
        </th>
        <th>
            Postcode
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>

        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.citylist.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.countylist.County)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.postcode.PostCode1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                 @Html.ActionLink("Details", "Details", new { id = item.idClient }, htmlAttributes: new { @class = "btn btn-primary btn-block btn-xs" })
                @Html.ActionLink("Needs", "Index", "C1clientneedsheader", new { id = item.idClient }, htmlAttributes: new { @class = "btn btn-warning btn-block btn-xs" })
            </td>
            <td>    
                @Html.ActionLink("Activities", "Index", "C1service", new { id = item.idClient }, htmlAttributes: new { @class = "btn btn-primary btn-block btn-xs" })
                @Html.ActionLink("Casework", "CaseWorkSummary", "ClientCaseWork", new { id = item.idClient }, htmlAttributes: new { @class = "btn btn-warning btn-block btn-xs" })
            </td>    
            <td>     
               @Html.ActionLink("Edit", "Edit", new { id = item.idClient }, htmlAttributes: new { @class = "btn btn-warning btn-block btn-xs" })
               @Html.ActionLink("Delete", "Delete", new { id = item.idClient }, htmlAttributes: new { @class = "btn btn-danger btn-block btn-xs" })
            </td>
            <td>
                @Html.ActionLink("Copy", "Copy", new { id = item.idClient }, htmlAttributes: new { @class = "btn btn-warning btn-block btn-xs" })
            </td>
        </tr>
    }
</table>
