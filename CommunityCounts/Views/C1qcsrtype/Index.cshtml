@model IEnumerable<CommunityCounts.Models.Master.C1qcsrtype>

@{
    ViewBag.Title = "List S/R Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Signpost/Referral Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
</p>
<table class="table table-striped table-hover">    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QCSRType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Signpost)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QCSRType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Signpost)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idQCSRType }, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
                @Html.ActionLink("Delete", "Delete", new { id = item.idQCSRType }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
